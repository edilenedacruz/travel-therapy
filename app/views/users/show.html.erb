<div class="container">
  <div class="col s12 m7">
    <div class="section">
    </div>
    <h5 class="header center-align"> <%= @user.first_name %>'s Dream Vacations Planning Center</h5>
    <div class="section">
    </div>
    <div class="card horizontal">
      <div class="card-image">
        <%= image_tag @user.avatar %>
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <ul>
          <li>First name: <%= @user.first_name %></li>
          <li>Last name: <%= @user.last_name %></li>
          <li>Username: <%= @user.username %></li>
          </ul>
        </div>
        <div class="card-action">
          <%= link_to "Edit your profile", username_edit_path(slug: @user.slug) %>
        </div>
      </div>
    </div>
  </div>
  <div class="center-align">
    <%= link_to "Plan an adventure", new_trip_path, class: "btn btn-color" %>
  </div>
    <div class="section">
    </div>
</div>
