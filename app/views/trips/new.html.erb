<div class="container">
  <div class="row">
    <form class="col s12">
      <%= form_for :trip do |f| %>
      <div class="input-field col s6" id="departure">
        Departure date
        <input type="date" class="datepicker">
      </div>
      <div class="input-field col s6" id="return">
        Return date
        <input type="date" class="datepicker">

      </div>
      <div class="row">
        <div class="col s12">
          Where would you like to go?
          <div class="input-field inline">
            <input type="text">
            <label for="email" data-error="wrong" data-success="right">City name, State</label>
          </div>
        </div>
  </div>
  <%= f.submit "Begin your adventure", class: "btn btn-color"  %>
  <% end %>
</form>
</div>
</div>
