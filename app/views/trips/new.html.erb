<div class="container">
  <div class="row">
    <% if current_user %>
      <%= form_for @trip do |f| %>
        <%= f.label :departure_date, "Departure date" %>
        <%= f.text_field :departure_date, placeholder: "mm/dd/yyy" %>
        <%= f.label :return_date, "Return date" %>
        <%= f.text_field :return_date, placeholder: "mm/dd/yyy" %>
        <%= f.label :city, "City" %>
        <%= f.collection_select :city, Country.all, :city_id, :city, { prompt: "Choose a city" }, class: "browser-default" %>
        <%= f.submit "Add new trip", class: "btn btn-color", method: :create %>
      <% end %>
      <% else %>
      <%= redirect_to root_path %>
      <% end %>
  </div>
</div>
