<div class="container">
  <div class="row">
    <form class="col s12">
      <%= form_for @trip do |f| %>
        <div class="input-field col s6">
        Departure date
          <input type="date" class="datepicker" id="departure" name="trip[departure_date]">
        </div>
      <div class="input-field col s6">
        Return date
        <input type="date" class="datepicker" id="return" name="trip[return_date]">
      </div>
      <div class="row">
        <div class="col s12">
            Where would you like to go?
          <div class="input-field inline">
            <input type="text" name="trip[city]">
            <label for="email" data-error="wrong" data-success="right">City name, State</label>
          </div>
        </div>
      </div>
        <%= f.submit "Begin your adventure", class: "btn btn-color", method: :create %>
      <% end %>
    </form>
  </div>
</div>

<%= form_for @trip do |f| %>
<%= f.label :departure_date %>
<%= f.text_field :departure_date %>
<%= f.label :return_date %>
<%= f.text_field :return_date %>
<%= f.label :city %>
<%= f.text_field :city %>
<%= f.submit %>
<% end %>
