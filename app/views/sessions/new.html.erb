<div class="container">
  <div class="row">
    <div class="col s1"><p></p></div>
    <div class="col s10">
      <div class="card form-card">
        <div class="card-content">
          <span class="card-title black-text">Login</span>
          <div class="login-form">
          <%= form_for :session, url: login_path do |f| %>
            <%= f.label :username %>
            <%= f.text_field :username %>
            <%= f.label :password %>
            <%= f.password_field :password %>
            <%= f.submit "Login", class: "btn btn-color" %>
            <% end %>
          </div>
        </div>
        <div class="card-action">
          <p>Dont have an account? </p>
          <%= link_to "Create an account", signup_path%>
        </div>
        <div class="card-action">
          <%= link_to 'Or sign in with Facebook', '/auth/facebook'%>
        </div>
      </div>
    </div>
  </div>
</div>
